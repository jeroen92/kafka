{
  "name": "source-b-to-a",
  "config": {
    "connector.class": "org.apache.kafka.connect.mirror.MirrorSourceConnector",
    "sync.topic.acls.enabled": "false",
    "group.id": "kafka-connect",
    "target.group.id": "kafka-connect",
    "replication.policy.class": "org.apache.kafka.connect.mirror.DefaultReplicationPolicy",
    "replication.factor": 1,
    "source.cluster.alias": "b",
    "refresh.groups.enabled": "true",
    "enabled": "true",
    "allow.auto.create.topics": "true",
    "replication.policy.separator": ".",
    "refresh.topics.enabled": "true",
    "sync.group.offsets.enable": "true",
    "offset-syncs.topic.location": "target",
    "offset-syncs.topic.replication.factor": "1",
    "offset.lag.max": "0",
    "emit.checkpoints.enabled": "true",
    "topics": ".*",
    "topics.exclude": "__.*, kafka_connect_.*, mm2-offset-syncs.*, .*.checkpoints.internal",
    "groups": ".*",
    "source.cluster.bootstrap.servers": "kafka-b:9092",
    "target.cluster.bootstrap.servers": "kafka-a:9092",
    "target.cluster.alias": "a",
    "producer.override.group.id": "kafka-connect",
    "producer.override.bootstrap.servers": "kafka-a:9092",
    "name": "source-b-to-a",
    "tasks.max": 3,
    "sync.topic.configs.enabled": "false",
    "errors.log.include.messages": "true",
    "errors.log.enable": "true"
  }
}
